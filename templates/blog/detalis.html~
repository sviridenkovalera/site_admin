{%block footer%}
	<script type = "text/javascript">
		$( document ).ready
		(
		 	function ()
			{
		 		$.ajax 
				( 
					{
						type: "GET",
						url: "/comment/{{ blog_record.id }}/",
						dataType: "html",
						success: function ( data )
						{
						
							$("#load_comment").html ( data );
						}
					}
				);
			}
		);	
	</script>
{% endblock %}


